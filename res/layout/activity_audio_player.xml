<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zby="http://schemas.android.com/apk/res/com.cantv.media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd" >

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_820px" >

        <RelativeLayout
            android:id="@+id/ll_cd"
            android:layout_width="@dimen/dimen_430px"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_230px"
            android:layout_marginTop="@dimen/dimen_160px" >

            <RelativeLayout
                android:id="@+id/rl_cd"
                android:layout_width="@dimen/dimen_430px"
                android:layout_height="@dimen/dimen_430px" >

                <com.cantv.media.center.ui.CircleProgressBar
                    android:id="@+id/pb_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    zby:bgBarColor="@color/per50_white"
                    zby:bgBarWidth="@dimen/dimen_1px"
                    zby:progressBarColor="@color/blue_32aefd"
                    zby:progressBarWidth="@dimen/dimen_7px" />

                <com.cantv.media.center.ui.CDView
                    android:id="@+id/v_cd"
                    android:layout_width="@dimen/dimen_400px"
                    android:layout_height="@dimen/dimen_400px"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_cd"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_65px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_curr_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/per80_white"
                    android:textSize="@dimen/fontsize_36px" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/per50_white"
                    android:textSize="@dimen/fontsize_36px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/dimen_960px"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_128px"
            android:layout_marginTop="@dimen/dimen_140px" >

            <RelativeLayout
                android:id="@+id/rl_nolyric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dimen_120px"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/iv_icon_lyric"
                    android:layout_width="@dimen/dimen_138px"
                    android:layout_height="@dimen/dimen_122px"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/nolyric" />

                <TextView
                    android:id="@+id/tv_nolyric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_icon_lyric"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_40px"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/dimen_24px"
                    android:text="@string/tips_no_lyric"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_36px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_lyric"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:includeFontPadding="false"
                    android:textColor="@color/per80_white"
                    android:textSize="@dimen/fontsize_48px" />

                <TextView
                    android:id="@+id/tv_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_32px"
                    android:includeFontPadding="false"
                    android:textColor="@color/per50_white"
                    android:textSize="@dimen/fontsize_36px" />

                <com.cantv.media.center.ui.LyricView
                    android:id="@+id/lv_lyric"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_singer"
                    android:layout_marginBottom="@dimen/dimen_100px"
                    android:layout_marginTop="@dimen/dimen_100px"
                    zby:lineFocusedPosiPercent="0.58"
                    zby:lineSpacing="@dimen/dimen_53px"
                    zby:textAlign="CENTER"
                    zby:textColor="@color/per80_white"
                    zby:textColorFocused="@color/yellow_fdf352"
                    zby:textSize="@dimen/fontsize_36px"
                    zby:textSizeFocused="@dimen/fontsize_42px" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:background="@drawable/music_bottombj" >

        <ImageButton
            android:id="@+id/ib_play_pause"
            android:layout_width="@dimen/dimen_136px"
            android:layout_height="@dimen/dimen_136px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_24px"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/selector_bg_play_btn" />

        <ImageButton
            android:id="@+id/ib_previous"
            android:layout_width="@dimen/dimen_136px"
            android:layout_height="@dimen/dimen_136px"
            android:layout_marginEnd="@dimen/dimen_14px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:layout_toStartOf="@id/ib_play_pause"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/selector_bg_previous_btn" />

        <ImageButton
            android:id="@+id/ib_next"
            android:layout_width="@dimen/dimen_136px"
            android:layout_height="@dimen/dimen_136px"
            android:layout_marginStart="@dimen/dimen_14px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:layout_toEndOf="@id/ib_play_pause"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/selector_bg_next_btn" />

        <RelativeLayout
            android:layout_width="@dimen/dimen_195px"
            android:layout_height="@dimen/dimen_50px"
            android:layout_marginStart="@dimen/dimen_128px"
            android:layout_marginTop="@dimen/dimen_66px" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bj_bfms" />

            <ImageView
                android:id="@+id/iv_play_mode"
                android:layout_width="@dimen/dimen_32px"
                android:layout_height="@dimen/dimen_32px"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_bfms" />

            <TextView
                android:id="@+id/tv_play_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_8px"
                android:layout_toEndOf="@id/iv_play_mode"
                android:text="@string/play_in_order"
                android:textColor="@color/per80_white"
                android:textSize="@dimen/fontsize_32px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_128px"
            android:layout_marginTop="@dimen/dimen_76px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="@dimen/dimen_32px"
                android:layout_height="@dimen/dimen_32px"
                android:layout_marginStart="@dimen/dimen_10px"
                android:scaleType="fitXY"
                android:src="@drawable/icon_menu1" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_8px"
                android:includeFontPadding="false"
                android:text="@string/tips_click_menu_key"
                android:textColor="@color/per80_white"
                android:textSize="@dimen/fontsize_32px" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>