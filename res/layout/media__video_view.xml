<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >
    </SurfaceView>

    <cn.cantv.mediacenter.filebrowser.ExternalSurfaceView
        android:id="@+id/media__video_view__surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/media__video_view__background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/general__share__player_bg"
        android:visibility="invisible"></ImageView>

    <TextView
        android:id="@+id/media__video_view__subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/px40"
        android:gravity="center"
        android:textSize="@dimen/px80" />

    <cn.cantv.mediacenter.filebrowser.PlayerControllerBar
        android:id="@+id/media__video_view__ctrlbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</FrameLayout>