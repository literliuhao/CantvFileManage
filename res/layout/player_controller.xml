<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ppb="http://schemas.android.com/apk/res/com.cantv.media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="48px" />

    <TextView
        android:id="@+id/tv_definiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rect_gray"
        android:gravity="center"
        android:visibility="invisible"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textSize="33px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:textSize="48px" />

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100px" >

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="128px"
            android:background="@drawable/play_stop" />

        <com.cantv.media.center.ui.player.PlayerProgresBar
            android:id="@+id/pb_progress"
            android:layout_width="1515px"
            android:layout_height="38px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/iv_play"
            android:padding="10px"
            ppb:barColor="#99019dd4"
            ppb:barhight="50dp"
            ppb:barwidth="50dp"
            ppb:bordercolor="#77999999"
            ppb:textcolor="#aaffffff"
            ppb:textsize="18dp" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/pb_progress"
            android:layout_below="@id/pb_progress"
            android:layout_marginTop="32px"
            android:text="@string/play_tips"
            android:textColor="#77ffffff"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_below="@id/pb_progress"
            android:layout_marginRight="8px"
            android:layout_marginTop="32px"
            android:layout_toLeftOf="@+id/tv_menu"
            android:background="@drawable/icon_menu1" />
    </RelativeLayout>

</RelativeLayout>