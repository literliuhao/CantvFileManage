<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ppb="http://schemas.android.com/apk/res/com.cantv.media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textSize="48px" />

    <TextView
        android:id="@+id/tv_definiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rect_gray"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:textSize="33px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:textSize="48px" />

    <LinearLayout
        android:id="@+id/rl_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:visibility="invisible"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_continue_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="10"
            android:textColor="#ffffff"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/ll_continue_tips"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/play_continue" 
                android:layout_marginTop="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="按下键可以从头播放"
                android:textColor="#eeffffff"
                android:textSize="30sp" 
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100px" >

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="128px"
            android:background="@drawable/play_stop" />

        <com.cantv.media.center.ui.player.PlayerProgresBar
            android:id="@+id/pb_progress"
            android:layout_width="1515px"
            android:layout_height="38px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="30px"
            android:layout_toRightOf="@id/iv_play"
            android:padding="10px"
            ppb:barColor="#99019dd4"
            ppb:barhight="50dp"
            ppb:barwidth="50dp"
            ppb:bordercolor="#77999999"
            ppb:textcolor="#aaffffff"
            ppb:textsize="18dp" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/pb_progress"
            android:layout_below="@id/pb_progress"
            android:layout_marginTop="32px"
            android:text="@string/play_tips"
            android:textColor="#77ffffff"
            android:textSize="32px" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_below="@id/pb_progress"
            android:layout_marginRight="8px"
            android:layout_marginTop="32px"
            android:layout_toLeftOf="@+id/tv_menu"
            android:background="@drawable/icon_menu1" />
    </RelativeLayout>

</RelativeLayout>