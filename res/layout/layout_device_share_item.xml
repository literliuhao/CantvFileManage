<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false" >

    <ImageView
        android:id="@+id/iv_Logo"
        android:layout_width="@dimen/dimen_156px"
        android:layout_height="@dimen/dimen_156px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_92px"
        android:background="@drawable/share_bj"
        android:focusable="false"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_60px"
        android:focusable="false"
        android:textColor="@color/per80_white"
        android:textSize="@dimen/fontsize_32px" />

</RelativeLayout>