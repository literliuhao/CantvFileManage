<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/imageview_share_layout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:focusable="true">

    <ImageView
        android:id="@+id/imageview_share"
        android:layout_width="@dimen/px360"
        android:layout_height="@dimen/px240"
        android:layout_margin="@dimen/px16"
        android:background="@drawable/bj_04"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px45"
        android:background="@drawable/icon_share"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textview_share_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px165"
        android:layout_gravity="center_horizontal"
        android:text="@string/str_share"
        android:textColor="@color/per80_white"
        android:textSize="@dimen/px36"/>

    <TextView
        android:id="@+id/textview_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px168"
        android:layout_marginTop="@dimen/px126"
        android:gravity="center_vertical|left"
        android:text="@string/str_noshare"
        android:textColor="@color/per50_white"
        android:textSize="@dimen/px28"
        android:visibility="gone"/>
</FrameLayout>