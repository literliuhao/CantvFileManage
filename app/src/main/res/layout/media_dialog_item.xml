<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
    android:clipChildren="false"
    android:paddingLeft="@dimen/px2" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="@dimen/px1600"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px400" >

        <ImageView
            android:id="@+id/iv_titleimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" >
        </ImageView>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px5"
            android:textSize="@dimen/px80" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/lst_dialog"
        android:layout_width="@dimen/px1600"
        android:layout_height="@dimen/px800"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px120"
        android:cacheColorHint="#ff0000"
        android:divider="@null"
        android:dividerHeight="@dimen/px50"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

</RelativeLayout>