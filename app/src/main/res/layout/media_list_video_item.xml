<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/px6" 
    >

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="@dimen/px1500"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/px5"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/btn_selector"
        android:textSize="@dimen/px24" >
    </TextView>

    <ImageView
        android:id="@+id/iv_radio"
        android:layout_width="@dimen/px60"
        android:layout_height="@dimen/px60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/px5"
        android:gravity="center"
        android:scaleType="fitXY" >
    </ImageView>

</RelativeLayout>