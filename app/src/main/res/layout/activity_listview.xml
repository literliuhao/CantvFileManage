<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/home_title" >

    <LinearLayout
    	android:orientation="horizontal"
	    android:layout_marginLeft="@dimen/px128"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px198" >
        <TextView
            android:id="@+id/title_textview"            
            android:layout_marginTop="@dimen/px70"
            android:layout_width="@dimen/px220"
        	android:layout_height="wrap_content"
        	android:textSize="@dimen/px56"
        	android:textColor="@color/per80_white"
        	android:text="@string/str_local" />
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px40"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/icon_menu1" /> 
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px8"
            android:layout_width="@dimen/px400"
        	android:layout_height="wrap_content"
        	android:textSize="@dimen/px32"
        	android:textColor="@color/per50_white"
        	android:text="@string/str_menu" />
        <TextView
            android:id="@+id/num_textview"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/px128"
            android:layout_width="@dimen/px400"
        	android:layout_height="wrap_content"
        	android:textSize="@dimen/px32"
        	android:textColor="@color/per50_white" /> 
    </LinearLayout>

    <ListView
        android:id="@+id/listview" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>