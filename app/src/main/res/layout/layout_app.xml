<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_app"
        android:layout_width="@dimen/px360"
        android:layout_height="@dimen/px360"
        android:layout_gravity="center"
        android:layout_margin="@dimen/px16"
        android:background="@drawable/bj_08"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px110"
        android:background="@drawable/icon_android"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px260"
        android:text="@string/str_app"
        android:textColor="@color/per80_white"
        android:textSize="@dimen/px36"/>

    <TextView
        android:id="@+id/textview_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px261"
        android:textColor="@color/per50_white"
        android:textSize="@dimen/px28"/>
</FrameLayout>