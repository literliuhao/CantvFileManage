<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/px136"
        android:layout_height="@dimen/px136"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/loading" />
    
    <TextView
        android:id="@+id/load_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_loading"
        android:layout_marginTop="@dimen/px55"
        android:textSize="@dimen/px36"
        android:textColor="@color/per80_white"
        android:text="@string/loading_tips"
        />

</RelativeLayout>