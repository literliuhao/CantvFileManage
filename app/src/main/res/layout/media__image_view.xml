<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.cantv.media.center.ui.ImageBrowser
        android:id="@+id/media__image_view__image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:id="@+id/mediaimagebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@drawable/screen_bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/media_image_ll_rotation"
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px260"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/media__image_view__rotation"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:focusable="true"
                android:src="@drawable/photo_info1"/>

            <TextView
                android:id="@+id/media__image_tv__rotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:text="@string/image_menu_rotation"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/fontsize_32"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_image_ll_size"
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px260"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/px80"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/media__image_view__size"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/photo_info2"/>

            <TextView
                android:id="@+id/media__image_tv__size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:text="@string/image_menu_scale"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/fontsize_32"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_image_ll_auto"
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px260"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/px80"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/media__image_view__auto"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:focusable="true"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/photo_info3"/>

            <TextView
                android:id="@+id/media__image_tv__auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:text="@string/image_menu_movie"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/fontsize_32"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/media_image_ll_info"
            android:layout_width="@dimen/px140"
            android:layout_height="@dimen/px260"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/px80"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/media__image_view__info"
                android:layout_width="@dimen/px80"
                android:layout_height="@dimen/px80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:focusable="true"
                android:gravity="center"
                android:src="@drawable/photo_info4"/>

            <TextView
                android:id="@+id/media__image_tv__info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/px24"
                android:text="@string/image_menu_info"
                android:textColor="@android:color/background_light"
                android:textSize="@dimen/fontsize_32"/>
        </LinearLayout>
    </LinearLayout>

	 <ImageView
            android:id="@+id/media__image_view__left"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px104"
            android:layout_marginLeft="@dimen/px104"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:src="@drawable/arrow_left_normal" />
	  <ImageView
            android:id="@+id/media__image_view__right"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px104"
            android:layout_marginRight="@dimen/px104"
            android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/arrow_right_normal" />
         <TextView
            android:id="@+id/media__image_tv__total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px72"
            android:layout_marginRight="@dimen/px128"
            android:layout_alignParentRight="true"
            android:textColor="#3fffffff"
            android:textSize="@dimen/fontsize_36"/>
          <TextView
            android:id="@+id/media__image_tv__position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px72"
            android:layout_toLeftOf="@id/media__image_tv__total"
            android:textColor="#7fffffff"
            android:textSize="@dimen/fontsize_36"/>

          <LinearLayout
              android:id="@+id/media__image_info_total"
              android:layout_width="@dimen/px854"
              android:layout_height="@dimen/px352"
              android:layout_marginLeft="@dimen/px848"
              android:layout_marginTop="@dimen/px460"
              android:visibility="gone"
              android:background="@drawable/infobj"
              android:orientation="vertical" >

              <TextView
                  android:id="@+id/media__image_info_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/px60"
                  android:layout_marginRight="@dimen/px60"
                  android:layout_marginTop="@dimen/px50"
                  android:singleLine="true"
                  android:ellipsize="marquee"
                  android:textColor="#7fffffff"
                  android:textSize="@dimen/fontsize_32" />

              <TextView
                  android:id="@+id/media__image_info_size"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/px60"
                  android:layout_marginTop="@dimen/px20"
                  android:textColor="#7fffffff"
                  android:textSize="@dimen/fontsize_32" />

              <TextView
                  android:id="@+id/media__image_info_url"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/px60"
                  android:layout_marginTop="@dimen/px20"
                  android:textColor="#7fffffff"
                  android:textSize="@dimen/fontsize_32" />

              <TextView
                  android:id="@+id/media__image_info_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/px60"
                  android:layout_marginRight="@dimen/px60"
                  android:layout_marginTop="@dimen/px20"
                  android:singleLine="true"
                  android:ellipsize="marquee"
                  android:textColor="#7fffffff"
                  android:textSize="@dimen/fontsize_32" />
          	</LinearLayout>

          <RelativeLayout
              android:id="@+id/media_image_header"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:visibility="gone"
              android:paddingLeft="@dimen/px128"
              android:paddingRight="@dimen/px128" >

              <ImageView
                  android:id="@+id/title_image"
                  android:layout_width="@dimen/px32"
                  android:layout_height="@dimen/px32"
                  android:layout_marginLeft="@dimen/px40"
                  android:layout_marginTop="@dimen/px92"
                  android:layout_toRightOf="@id/title_textview"
                  android:background="@drawable/icon_menu1" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="@dimen/px50"
                  android:layout_marginLeft="@dimen/px20"
                  android:layout_marginTop="@dimen/px88"
                  android:layout_toRightOf="@id/title_image"
                  android:text="@string/str_menu"
                  android:textColor="@color/per50_white"
                  android:textSize="@dimen/px32" />
          </RelativeLayout>

</RelativeLayout>