<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ppb="http://schemas.android.com/apk/res/com.cantv.media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_75px"
        android:layout_marginTop="@dimen/dimen_75px"
        android:textSize="@dimen/fontsize_48px" />

    <TextView
        android:id="@+id/tv_definiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="@dimen/dimen_75px"
        android:background="@drawable/rect_gray"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_5px"
        android:paddingLeft="@dimen/dimen_15px"
        android:paddingRight="@dimen/dimen_15px"
        android:paddingTop="@dimen/dimen_5px"
        android:textSize="@dimen/fontsize_33px"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_75px"
        android:layout_marginTop="@dimen/dimen_75px"
        android:textSize="@dimen/fontsize_48px" />

    <LinearLayout
        android:id="@+id/rl_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_405px"
        android:visibility="invisible"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_continue_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="10"
            android:textColor="#ffffff"
            android:textSize="@dimen/fontsize_52px" />

        <LinearLayout
            android:id="@+id/ll_continue_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/dimen_53px"
                android:layout_height="@dimen/dimen_53px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/play_continue" 
                android:layout_marginTop="@dimen/dimen_5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_53px"
                android:layout_gravity="center_vertical"
                android:text="按下键可以从头播放"
                android:textColor="#eeffffff"
                android:textSize="@dimen/fontsize_46px" 
                android:layout_marginLeft="@dimen/dimen_15px"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_171px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_100px" >

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="@dimen/dimen_100px"
            android:layout_height="@dimen/dimen_100px"
            android:layout_marginLeft="@dimen/dimen_128px"
            android:background="@drawable/play_stop" />

        <com.cantv.media.center.ui.player.PlayerProgresBar
            android:id="@+id/pb_progress"
            android:layout_width="@dimen/dimen_1515px"
            android:layout_height="@dimen/dimen_38px"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:layout_marginTop="@dimen/dimen_30px"
            android:layout_toRightOf="@id/iv_play"
            android:padding="@dimen/dimen_10px"
            ppb:barColor="#99019dd4"
            ppb:barhight="@dimen/dimen_75px"
            ppb:barwidth="@dimen/dimen_75px"
            ppb:bordercolor="#77999999"
            ppb:textcolor="#aaffffff"
            ppb:textsize="@dimen/dimen_27px" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/pb_progress"
            android:layout_below="@id/pb_progress"
            android:layout_marginTop="@dimen/dimen_32px"
            android:text="@string/play_tips"
            android:textColor="#77ffffff"
            android:textSize="@dimen/fontsize_32px" />

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="@dimen/dimen_42px"
            android:layout_height="@dimen/dimen_42px"
            android:layout_below="@id/pb_progress"
            android:layout_marginRight="@dimen/dimen_8px"
            android:layout_marginTop="@dimen/dimen_32px"
            android:layout_toLeftOf="@+id/tv_menu"
            android:background="@drawable/icon_menu1" />
    </RelativeLayout>

</RelativeLayout>