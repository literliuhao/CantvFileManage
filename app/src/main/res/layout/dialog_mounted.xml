<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/px1920"
        android:layout_height="@dimen/px1080"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_devices_background"/>

        <TextView
            android:id="@+id/tv_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px280"
            android:text="@string/str_newdevice"
            android:textColor="@color/per80_white"
            android:textSize="@dimen/px40"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_devices"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px100"
            android:orientation="horizontal">

            <include layout="@layout/dialog_image"/>

            <include layout="@layout/dialog_video"/>

            <include layout="@layout/dialog_audio"/>

            <include layout="@layout/dialog_file"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>